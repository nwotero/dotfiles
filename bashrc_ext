#!/bin/bash

# === Functions ===
function cd {
    builtin cd "$1"
    ls
}

function mkcd {
    mkdir -p "$1"
    cd "$1"
}

function ebrc {
    lvim ~/bashrc_ext
    source ~/.bashrc
}

function evim {
    lvim ~/.config/lvim/config.lua
}

parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}
# === Aliases ===
alias .1="cd .."
alias .2="cd ../.."
alias .3="cd ../../.."
alias .4="cd ../../../.."
alias .5="cd ../../../../.."
alias ...=".2"
alias ....=".3"
alias .....=".4"
alias ......=".4"

alias bat=batcat
alias e=lvim
alias g=gitui
alias m=make
alias Nala="sudo nala"
alias o=xdg-open
alias plz='sudo $(history -p !!)'
alias r=trash
alias rm=trash
alias sc=sc-im
alias vi='lvim'
alias vim='lvim'

# === Exports ===
export EDITOR=lvim
export PATH="$PATH:$(go env GOPATH)/bin:/usr/local/texlive/2022/bin/x86_64-linux"
export VISUAL=lvim
export PS1="\u@\h \[\033[32m\]\w\[\033[33m\]\$(parse_git_branch)\[\033[00m\] $ "

# === Variables ===
LS_COLORS+=':ow=01;33'

# === Keybindngs ===
set -o vi
bind '"jk":vi-movement-mode'

# === Environment === 
. "$HOME/.cargo/env"
source /usr/share/doc/fzf/examples/key-bindings.bash

[[ -n $SSH_TTY ]] && neofetch
[[ -f $HOME/bashrc_ext_local ]] && source "$HOME/bashrc_ext_local"
